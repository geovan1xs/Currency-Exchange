<Gerenciador>
    Menu:
        name: 'menu'
    Inicio:
        name: 'inicio'
    Dolar:
        name: 'Dolar'
        id: moedausd
    Euro:
        name: 'Euro'
        id: moedaeur
    Bitcoin:
        name: 'Bitcoin'
        id: moedabtc
    Iene:
        name: 'Iene'
        id: moedajpy
    Libra:
