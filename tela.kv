        id: moedaars



<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:50
        spacing:50
        Image:
            source:'Imagem/vai.jpeg'
            size_hint_y:None
            height:300
            allow_stretch:True

        Button:
            canvas:
            text:'Iniciar'
            background_color: [0, 0, 0, 0]
            canvas.before:
                Color:
                    rgba:0.1,0.5,0.7,1
                Ellipse:
                    pos:self.pos
                    size:self.height,self.height
                Ellipse:
                    pos:self.x+self.width-self.height,self.y
                    size:self.height,self.height
                Rectangle:
                    pos:self.x+self.height/2.0,self.y
                    size:self.width-self.height,self.height
            on_release: app.root.current = 'inicio'
        Button:
            text:'Sair'
            background_color: [0, 0, 0, 0]
            canvas.before:
                Color:
                    rgba:0.1,0.5,0.7,1
                Ellipse:
                    pos:self.pos
                    size:self.height,self.height
                Ellipse:
                    pos:self.x+self.width-self.height,self.y
                    size:self.height,self.height
                Rectangle:
                    pos:self.x+self.height/2.0,self.y
                    size:self.width-self.height,self.height

            on_release:app.stop()

<Inicio>:
    BoxLayout:
        orientation:'vertical'
        padding:50
        spacing:50
        BoxLayout:

            padding:35
            spacing:35
            Button:
                canvas.before:
                    BorderImage:
                        source:'Imagem/dolar.jpeg'
                        pos: self.pos
                        size: self.size

                on_release: app.root.current = 'Dolar'
                background_color: [0, 0, 0, 0]
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        rectangle: [*self.pos, *self.size]

            Button:
                canvas.before:
                    BorderImage:
                        source:'Imagem/euro.jpeg'
                        pos: self.pos
                        size: self.size

                on_release: app.root.current = 'Euro'
